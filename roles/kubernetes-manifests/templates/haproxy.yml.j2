kind: Pod
apiVersion: v1
metadata:
  annotations:
    scheduler.alpha.kubernetes.io/critical-pod: ""
  labels:
    component: haproxy
    tier: control-plane
  name: haproxy
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: haproxy
    image: haproxy:1.9.6
    resources:
      requests:
        cpu: 100m
    volumeMounts:
    - name: cfg-volume
      readOnly: true
      mountPath: "/usr/local{{ haproxy_etc_dirs }}haproxy.cfg"
  volumes:
  - name: cfg-volume
    hostPath:
      path: "{{ haproxy_etc_dirs }}haproxy.cfg"
